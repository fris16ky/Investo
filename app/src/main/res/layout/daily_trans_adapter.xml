<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_adapter_daily_trans_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="NOTE"
            android:textAlignment="center">

        </TextView>

        <TextView
            android:id="@+id/tv_adapter_daily_trans_amount"
            android:layout_below="@id/tv_adapter_daily_trans_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:text="AMOUNT"
            android:textAlignment="center">

        </TextView>

        <Button
            android:id="@+id/daily_trans_del_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:layout_marginRight="30dp"
            android:foreground="@drawable/baseline_delete_24"
            android:background="@drawable/box_rounded_corners">

        </Button>
    </RelativeLayout>



</LinearLayout>